# Database Configuration
DATABASE_URL=postgres://postgres:your_password@db:5432/postgres?sslmode=disable

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_JWT_SECRET=your_jwt_secret_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Redpanda/Kafka Configuration
REDPANDA_BROKERS=localhost:9092

# Canva Integration
CANVA_REDIRECT_URI=https://your-domain.com/api/canva/auth/callback
CANVA_CLIENT_ID=your_canva_client_id
CANVA_CLIENT_SECRET=your_canva_client_secret

# Typesense Configuration
TYPESENSE_API_KEY=your_typesense_api_key
TYPESENSE_HOST=typesense
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http

# Application Configuration
APP_BASE_URL=https://your-domain.com

# Unsplash API
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# Admin API Key
ADMIN_API_KEY=your_admin_api_key

# Notification Provider
NOTIFICATION_PROVIDER=smtp

# SMTP Configuration (for email notifications)
# Required when NOTIFICATION_PROVIDER=smtp
SMTP_ADMIN_EMAIL=noreply@your-domain.com
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_SECURE=false
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_FROM_NAME=YourAppName

# Worker Configuration
IS_CRON_WORKER=false
IS_TEMPORAL_WORKER=false

# Notification Strategy
NOTIFIER_STRATEGY=async

# Redis Configuration
REDIS_HOST=ecomweb_redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache Provider
CACHE_PROVIDER=redis

# Store Customer JWT Secret
SUPABASE_STORE_CUSTOMER_JWT_SECRET=your_store_jwt_secret

# Temporal Configuration
TEMPORAL_ADDRESS=temporal:7233

# Environment
APP_ENV=production

# ============================================================================
# VERCEL DOMAIN MANAGEMENT CONFIGURATION
# ============================================================================
# Required for managing custom domains and subdomains via Vercel
# Get your Vercel API token from: https://vercel.com/account/tokens
VERCEL_API_TOKEN=your_vercel_api_token

# Vercel Team ID (optional)
# Required if your project belongs to a team/organization
# Leave empty for personal accounts
VERCEL_TEAM_ID=

# Vercel project name (identifier)
VERCEL_PROJECT_NAME=your-project-name

# Platform's verified domain
PLATFORM_VERIFIED_DOMAIN=your-domain.com

# Platform domain suffix
PLATFORM_DOMAIN_SUFFIX=your-domain.com

# Domain proxy provider
DOMAIN_PROXY=vercel

# Discord Webhook Configuration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url
DISCORD_WEBHOOK_ENABLED=true
